include paintCanvas
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/styles.css")
        title Guess-Mine
    body
            +paintCanvas()
            .loginBox
                form#jsLogin
                    input(type="text", placeholder="Whats your nickname ?")
            .gameContainer#jsGame
                button.head__button.notReady#jsReadyBtn Click to Ready !
                .statusNotif
                    span ⏰🧨💣
                    span :
                    span#jsStatusTime 00
                .chat
                    ul.chat__message#jsMessage
                    form.chat__form#jsSendMsg
                        input(placeholder="Write a Message.", type="text")
            .player__board 
                .player__number 
                    span 👨🏻‍💻👩🏻‍💻
                    span :
                    span#jsPlayerNumber 2
                .player__list#jsPBoard
    script.
        window.events = !{events}
    script(src="/socket.io/socket.io.js")
    script(src="/js/main.js")