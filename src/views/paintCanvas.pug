mixin paintCanvas()
    .paintContainer
        canvas#jsCanvas.canvas
        .controls
            .controls__range
                input#jsRange(type="range", min="0.1", max="5.0", value="2.5", step="0.1")
            .controls__btns
                button#jsMode Fill
                button#jsSave Save
                button#jsRefresh Refresh
            .controls__colors#jsColors
                .controls__color.jsColor(style={background:"#2c2c2c"})
                .controls__color.jsColor(style={background:"white"})
                .controls__color.jsColor(style={background:"#FF3B30"})
                .controls__color.jsColor(style={background:"#FF9500"})
                .controls__color.jsColor(style={background:"#FFCC00"})
                .controls__color.jsColor(style={background:"#4CD963"})
                .controls__color.jsColor(style={background:"#5AC8FA"})
                .controls__color.jsColor(style={background:"#0579FF"})
                .controls__color.jsColor(style={background:"#5856D6"})